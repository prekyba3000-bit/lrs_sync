{
  "name": "@seimas/monorepo",
  "version": "3.0.0",
  "description": "Seimas.v3 - A modern monorepo for Seimas project management",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "workspaces": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r --filter=./packages run build && pnpm -r --filter=./apps run build",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test:coverage",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r run clean && rm -rf node_modules .pnpm-store",
    "install-dependencies": "pnpm install",
    "update-dependencies": "pnpm update -r",
    "version": "echo 3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "seimas",
    "monorepo",
    "pnpm",
    "typescript"
  ],
  "author": "prekyba3000-bit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prekyba3000-bit/Seimas.v3.git"
  },
  "bugs": {
    "url": "https://github.com/prekyba3000-bit/Seimas.v3/issues"
  },
  "homepage": "https://github.com/prekyba3000-bit/Seimas.v3#readme"
}
